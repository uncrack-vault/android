<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.fragments.account.AddFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/dm_sans_bold"
            android:gravity="center_horizontal"
            android:text="@string/new_password"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_bg"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="@string/password_information"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/account_logo"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo_light_mode"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/accountNameHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/dm_sans_medium"
                    android:text="@string/account_name"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menu_account"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/hint_color"
                    app:boxBackgroundColor="@color/white">

                    <AutoCompleteTextView
                        android:id="@+id/acc_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/dm_sans"
                        android:inputType="none"
                        android:background="@drawable/edittext_field"
                        android:paddingStart="16dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/remainingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!--Email-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dm_sans_medium"
                            android:text="@string/email"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_field"
                        android:fontFamily="@font/dm_sans"
                        android:hint="@string/demo_email"
                        android:maxLines="1"
                        android:paddingStart="14dp"
                        android:textColorHint="@color/hint_color"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/emailHelperTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        android:visibility="gone"
                        tools:text="Please Enter the Email." />

                    <!--UserName-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dm_sans_medium"
                            android:text="@string/username"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_field"
                        android:fontFamily="@font/dm_sans"
                        android:hint="@string/demo_username"
                        android:maxLines="1"
                        android:paddingStart="14dp"
                        android:textColorHint="@color/hint_color"
                        tools:ignore="RtlSymmetry" />

                    <!--Password-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dm_sans_medium"
                            android:text="@string/password"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_field"
                        android:fontFamily="@font/dm_sans"
                        android:hint="@string/demo_password"
                        android:paddingStart="14dp"
                        android:maxLines="1"
                        android:textColorHint="@color/hint_color"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/generate_random_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="Generate Password"
                        android:textColor="#7489F9"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="133dp"
                        android:layout_height="1dp"
                        android:layout_gravity="end"
                        android:background="#7489F9" />

                    <TextView
                        android:id="@+id/passwordHelperTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        android:visibility="gone"
                        tools:text="Please Enter the Password." />

                    <!--Note-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dm_sans_medium"
                            android:text="@string/note"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/note"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_field"
                        android:fontFamily="@font/dm_sans"
                        android:hint="@string/demo_note"
                        android:paddingStart="14dp"
                        android:textColorHint="@color/hint_color"
                        tools:ignore="RtlSymmetry" />

                    <!--Category-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dm_sans_medium"
                            android:text="@string/category"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>


                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:scrollbars="none"
                        app:layout_constraintEnd_toEndOf="@+id/textView4"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView4"
                        app:layout_constraintTop_toBottomOf="@+id/textView4">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/categoryChipGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            app:selectionRequired="true"
                            app:singleLine="true"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipWork"
                                android:layout_width="90dp"
                                android:layout_height="60dp"
                                android:checkable="true"
                                android:checked="true"
                                android:gravity="center"
                                android:text="@string/work"
                                android:textColor="@color/white"
                                app:checkedIconEnabled="false"
                                app:chipBackgroundColor="@color/catergory_icon"
                                app:chipCornerRadius="10dp"
                                app:chipIcon="@drawable/work"
                                app:chipIconEnabled="true"
                                app:iconStartPadding="5dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipSocial"
                                android:layout_width="95dp"
                                android:layout_height="60dp"
                                android:checkable="true"
                                android:gravity="center"
                                android:text="@string/social"
                                android:textColor="@color/white"
                                app:checkedIconEnabled="false"
                                app:chipBackgroundColor="@color/catergory_icon"
                                app:chipCornerRadius="10dp"
                                app:chipIcon="@drawable/social"
                                app:chipIconEnabled="true"
                                app:iconStartPadding="5dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipMail"
                                android:layout_width="90dp"
                                android:layout_height="60dp"
                                android:checkable="true"
                                android:gravity="center"
                                android:text="@string/mail"
                                android:textColor="@color/white"
                                app:checkedIconEnabled="false"
                                app:chipBackgroundColor="@color/catergory_icon"
                                app:chipCornerRadius="10dp"
                                app:chipIcon="@drawable/mail"
                                app:chipIconEnabled="true"
                                app:iconStartPadding="5dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipOther"
                                android:layout_width="90dp"
                                android:layout_height="60dp"
                                android:checkable="true"
                                android:gravity="center"
                                android:text="@string/others"
                                android:textColor="@color/white"
                                app:checkedIconEnabled="false"
                                app:chipBackgroundColor="@color/catergory_icon"
                                app:chipCornerRadius="10dp"
                                app:chipIcon="@drawable/others"
                                app:chipIconEnabled="true"
                                app:iconStartPadding="5dp" />


                        </com.google.android.material.chip.ChipGroup>
                    </HorizontalScrollView>

                    <include
                        android:id="@+id/btnSave"
                        layout="@layout/primary_progress_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="50dp" />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <include
        android:id="@+id/progress_animation"
        layout="@layout/progress_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>